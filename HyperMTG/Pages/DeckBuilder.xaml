<UserControl x:Class="HyperMTG.Pages.DeckBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hp="clr-namespace:HyperMTG.Helper"
             xmlns:local="clr-namespace:HyperMTG.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             d:DesignHeight="320" d:DesignWidth="480"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:DeckBuiderViewModel />
    </UserControl.DataContext>
    <Grid Style="{StaticResource ContentRoot}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="*" MinWidth="100" />
            </Grid.ColumnDefinitions>
            <Expander Grid.Row="0" Grid.Column="0"
                      Height="Auto" ExpandDirection="Down"
                      Header="Property Filter">
                <ListBox hp:ColumnObject.ItemsSourceFromColumns="{Binding ElementName=ListView}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Margin="2"
                                      Content="{Binding Column.Header}"
                                      IsChecked="{Binding IsVisible}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Expander>
            <ListView x:Name="ListView" Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding Cards}"
                      SelectedValue="{Binding Card.Card,
                                              IsAsync=True,
                                              Mode=OneWayToSource}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                        <GridViewColumn DisplayMemberBinding="{Binding zName}" Header="zName" />
                        <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="Type" />
                        <GridViewColumn DisplayMemberBinding="{Binding zType}" Header="zType" />
                        <GridViewColumn DisplayMemberBinding="{Binding Cost}" Header="Cost" />
                        <GridViewColumn DisplayMemberBinding="{Binding Set}" Header="Set" />
                        <GridViewColumn DisplayMemberBinding="{Binding SetCode}" Header="SetCode" />
                        <GridViewColumn DisplayMemberBinding="{Binding Number}" Header="Number" />
                        <GridViewColumn DisplayMemberBinding="{Binding RarityCode}" Header="RarityCode" />
                        <GridViewColumn DisplayMemberBinding="{Binding Rating}" Header="Rating" />
                    </GridView>
                </ListView.View>
            </ListView>
            <ScrollViewer Grid.Row="0" Grid.RowSpan="2"
                          Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="{Binding Card.ImageA}" />
                    <Image Grid.Row="1" Source="{Binding Card.ImageB}" />
                    <mui:BBCodeBlock Grid.Row="2" />
                </Grid>
            </ScrollViewer>
            <StackPanel Grid.Row="0" Grid.Column="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <mui:BBCodeBlock Margin="0,0,4,0" BBCode="[i]Mainboard:[/i]" />
                <mui:BBCodeBlock Margin="4,0,0,0" BBCode="{Binding Items.Count, ElementName=Lbmain}" />
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="3"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <mui:BBCodeBlock Margin="0,0,4,0" BBCode="[i]Sideboard:[/i]" />
                <mui:BBCodeBlock Margin="4,0,0,0" BBCode="{Binding Items.Count, ElementName=Lbside}" />
            </StackPanel>
            <ListView x:Name="Lbmain" Grid.Row="1"
                      Grid.Column="2"
                      ItemsSource="{Binding Deck.MainBoard}" />
            <ListView x:Name="Lbside" Grid.Row="1"
                      Grid.Column="3"
                      ItemsSource="{Binding Deck.SideBoard}" />
        </Grid>
    </Grid>
</UserControl>
