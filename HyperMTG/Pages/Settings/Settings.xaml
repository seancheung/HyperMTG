<UserControl x:Class="HyperMTG.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             d:DesignHeight="300" d:DesignWidth="300"
             mc:Ignorable="d">

    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <mui:BBCodeBlock Height="30" Margin="0,0,0,8"
                         BBCode="All changes will be saved automatically" />
        <mui:ModernTab Grid.Row="1" Layout="List"
                       SelectedSource="/Pages/Settings/About.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="appearance" Source="/Pages/Settings/SettingsAppearance.xaml" />
                <mui:Link DisplayName="language" Source="/Pages/Settings/SettingsLanguage.xaml" />
                <mui:Link DisplayName="about" Source="/Pages/Settings/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>

    </Grid>
</UserControl>
