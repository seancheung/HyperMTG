<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <MaterialGroup x:Key="Material_Edge">
        <SpecularMaterial Brush="White" />
        <DiffuseMaterial>
            <DiffuseMaterial.Brush>
                <SolidColorBrush Color="Bisque" />
            </DiffuseMaterial.Brush>
        </DiffuseMaterial>
    </MaterialGroup>

    <DiffuseMaterial x:Key="Material_FrontCover" Brush="{StaticResource IslandSwampBrush}" />

    <DiffuseMaterial x:Key="Material_Cover" Brush="{StaticResource IslandSwampBrush}" />
</ResourceDictionary>