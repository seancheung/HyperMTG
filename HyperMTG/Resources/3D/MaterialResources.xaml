<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <MaterialGroup x:Key="Material_Edge">
        <SpecularMaterial Brush="White" />
        <DiffuseMaterial>
            <DiffuseMaterial.Brush>
                <SolidColorBrush Color="Bisque" />
            </DiffuseMaterial.Brush>
        </DiffuseMaterial>
    </MaterialGroup>

    <DiffuseMaterial x:Key="Material_FrontCover" Color="SteelBlue">
        <DiffuseMaterial.Brush>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Viewbox>
                        <Border Background="{StaticResource IslandSwampBrush}">
                            <Path Margin="10"
                                  Data="{DynamicResource JOUGeometry}"
                                  Stretch="UniformToFill"
                                  Style="{DynamicResource PathMythic}" />
                        </Border>
                    </Viewbox>
                </VisualBrush.Visual>
            </VisualBrush>
        </DiffuseMaterial.Brush>
    </DiffuseMaterial>

    <DiffuseMaterial x:Key="Material_Cover" Brush="{StaticResource IslandSwampBrush}" />
</ResourceDictionary>