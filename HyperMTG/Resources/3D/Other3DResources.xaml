<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <PerspectiveCamera x:Key="Other3D_MainCamera" FieldOfView="30"
                       LookDirection="0 2.5 -6.5" Position="0 -2.5 6.5"
                       UpDirection="0 1 0" />

    <ModelVisual3D x:Key="Other3D_Lights">
        <ModelVisual3D.Content>
            <Model3DGroup>
                <AmbientLight Color="LightGray" />
                <DirectionalLight Direction="2 -3 -1" Color="Gray" />
            </Model3DGroup>
        </ModelVisual3D.Content>
    </ModelVisual3D>
</ResourceDictionary>